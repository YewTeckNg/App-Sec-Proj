@page
@model WebApplication3.Pages.LoginTwoStepModel
@{
}

<div class="container mt-5">

	<div class="row justify-content-center align-items-center">

		<div class="col-sm-12 col-md-12 col-lg-4">
			<h1 class="mb-3">Two Factor Authentication </h1>

			<form method="post">

				<div class="mb-3">
					<label class="form-label" asp-for="OTP">Enter OTP</label>
					<input type="number" asp-for="OTP" class="form-control" maxlength="6" required />
				</div>

				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Login</button>
				</div>
			</form>
		</div>
	</div>
</div>